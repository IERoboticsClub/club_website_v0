            <li key={user.firstName} class="hover:shadow-lg hover:scale-[1.01] overflow-hidden rounded-2xl shadow-md user-card">
              <img class="aspect-[3/2] w-full relative -top-5 object-top object-cover" src={user.image} alt="" />
